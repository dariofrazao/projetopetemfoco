<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="projetaobcc20172.com.projetopetemfoco">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />

        <activity
            android:name=".activity.CadastroPetActivity"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".activity.CadastroUsuarioActivity"
            android:label="@string/title_cadastro_usuario"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".activity.CadastroServicoActivity"
            android:label="@string/title_activity_cadastro_servico"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".activity.CadastroFornecedorActivity"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name=".activity.CadastroEnderecoActivity" />
        
    </application>

</manifest>